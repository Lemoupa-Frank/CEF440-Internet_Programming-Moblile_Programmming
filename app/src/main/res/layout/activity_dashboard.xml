<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Activity.Activity.Dashboard"
    android:orientation="vertical">
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/activity_header_nav_bar"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        app:menu="@menu/menu_top">

    </com.google.android.material.navigation.NavigationView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_grey">


        <ImageView
            android:id="@+id/ivMenuIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/baseline_menu_24"
            android:padding="8dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:focusable="true"
            />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WELCOME TO JETME"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"
            android:gravity="center"/>






    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">
<!--        android:background="@color/grey"-->


        <androidx.fragment.app.FragmentContainerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/maps"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:name="com.google.android.gms.maps.SupportMapFragment">

        </androidx.fragment.app.FragmentContainerView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="horizontal"
        android:background="@color/grey_grey">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="15dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Altitude"
                android:layout_margin="2dp"
                android:textSize="21dp"
                android:gravity="left"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Distance to location"
                android:layout_margin="2dp"
                android:textSize="21dp"
                android:gravity="left"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="outside temperature"
                android:layout_margin="2dp"
                android:textSize="21dp"
                android:gravity="left"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Distance to location"
                android:layout_margin="2dp"
                android:textSize="21dp"
                android:gravity="left"
                android:textColor="@color/black" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="15dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="35000ft"
                android:layout_margin="2dp"
                android:textSize="21dp"
                android:gravity="right"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="2054m"
                android:layout_margin="2dp"
                android:textSize="21dp"
                android:gravity="right"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="35deg"
                android:layout_margin="2dp"
                android:textSize="21dp"
                android:gravity="right"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="2h:30m"
                android:layout_margin="2dp"
                android:textSize="21dp"
                android:gravity="right"
                android:textColor="@color/black" />


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView

            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:layout_constraintStart_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="parent"
            app:menu="@menu/bottom_nav" />


    </LinearLayout>


</LinearLayout>