<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Activity.Activity.Dashboard"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gold_prime">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/gold_prime"
            android:src="@drawable/baseline_menu_24">

        </ImageButton>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="WELCOME TO JETME"

            android:textColor="@color/black_black"
            android:textSize="20sp"
            android:gravity="center">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@color/grey">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="image_map"
            android:src="@mipmap/map_picture" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="horizontal"
        android:background="@color/grey_grey">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="15dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Altitude"
                android:layout_margin="2dp"
                android:textSize="21dp"
                android:gravity="left"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Distance to location"
                android:layout_margin="2dp"
                android:textSize="21dp"
                android:gravity="left"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="outside temperature"
                android:layout_margin="2dp"
                android:textSize="21dp"
                android:gravity="left"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Distance to location"
                android:layout_margin="2dp"
                android:textSize="21dp"
                android:gravity="left"
                android:textColor="@color/black" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="15dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="35000ft"
                android:layout_margin="2dp"
                android:textSize="21dp"
                android:gravity="right"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="2054m"
                android:layout_margin="2dp"
                android:textSize="21dp"
                android:gravity="right"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="35deg"
                android:layout_margin="2dp"
                android:textSize="21dp"
                android:gravity="right"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="2h:30m"
                android:layout_margin="2dp"
                android:textSize="21dp"
                android:gravity="right"
                android:textColor="@color/black" />


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView

            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:layout_constraintStart_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="parent"
            app:menu="@menu/bottom_nav">

        </com.google.android.material.bottomnavigation.BottomNavigationView>


    </LinearLayout>


</LinearLayout>